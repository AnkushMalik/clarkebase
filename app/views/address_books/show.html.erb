<%= render partial: 'layouts/nav' %>
<%= render partial: 'layouts/side_menu' %>

<div class="container">
  <div class="row" id="add-a-friend">
    <div class="col-sm-6 col-md-6">
      <div class="card-header">
        Friends List
      </div>
      <div class="scrollable">
        <% current_user.friends.reverse.each do |friend| %>
          <p><%= "#{friend.email}" %></p>
          <span>
            <a href="" class="toggle-modal" data-email="<%= friend.email %>" data-address="<%= friend.wallet.address if friend.wallet %>" ><i class="fa fa-tag" aria-hidden="true"></i>Address</a>
            <hr>
          </span>
        <% end %>
      </div>

      <div class="modal fade" id="address-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title" id="myModalLabel"></h4>
            </div>
            <div class="modal-body">
              <div class="inputs">
                Address: <input id="addy" type="url" value="">
                <button id="copy_btn" class="addy"><i class="fa fa-clipboard"></i></button>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6 col-md-6">
      <div class="card">
        <div class="card-header">
          Add a friend
        </div>
        <div class="card-block">
          <form id="add-friend" >
            <div class="input-group input-group-lg">
              <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-envelope" aria-hidden="true"></i></span>
              <input autocomplete="off" class="form-control" placeholder="Email" type="text" name="email" id="friend-input-key">
            </div>
            <br><h4 class="text-xs-center">Or</h4><br>
            <div class="input-group input-group-lg">
              <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-key" aria-hidden="true"></i></span>
              <input autocomplete="off" class="form-control" placeholder="Public Key" type="text" name="key" id="friend-input-key">
            </div><br>
            <div class="actions form-group">
              <input class="btn btn-primary btn-lg btn-block" type="submit" value="Add Friend"> </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
