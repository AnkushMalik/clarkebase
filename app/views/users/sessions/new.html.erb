<div class="landing-image-sign-in">
  <%= render partial: 'layouts/nav' %>
  <div class="opacity-sign-in">
    <%= render partial: 'layouts/flash' %>
    <div class="container animated pulse log-in" id="log-in">
      <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
        <div class="sign-in-page card">
          <div class="card-header">
              Welcome Back
          </div>
          <div class="card-block">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="input-group input-group-lg">
                <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-user fa-fw" aria-hidden="true"></i></span>
                <input class="form-control" placeholder="EMAIL" aria-describedby="sizing-addon1" type="email" value="" name="user[email]" id="user_email">
              </div>
              <br>
                <div class="input-group input-group-lg">
                  <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-lock fa-fw" aria-hidden="true"></i></span>
                  <input autocomplete="off" class="form-control" type="password" placeholder="PASSWORD" name="user[password]" aria-describedby="sizing-addon1" id="user_password" />
                </div>

              <% if devise_mapping.rememberable? -%>
              <br>
                <div class="form-group pull-left">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, class: "check" %>
                </div>
                <div class="form-group actions">
                  <%= f.submit "Log in", id: "logIn", class: "btn btn-primary btn-lg btn-block log"%>
                </div>
              </div>
              <% end %>
            <% end %>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
